<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hey Hater! </title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>
  <body>
    <nav
      class="navbar is-danger"
      role="navigation"
      aria-label="main navigation"
    >
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <!-- <h1>Luv2H8!</h1> -->
          <img src="/image/luv2h8.png" width="" height="" />
        </a>
        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div id="navbarBasicExample" class="navbar-menu" id="navMenu">
        <div class="navbar-start">
          <a href="/newPost" class="navbar-item" id="newPost">
            + New Post
          </a>
          <a href="/category" class="navbar-item" id="category">
            Category
          </a>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <!-- Only display the logout button if the user is logged in -->
              {{#if logged_in}}
                <a
                  href="/myPosts/{{user_id}}"
                  class="button is-dark"
                  id="my-posts"
                >
                  <strong>My Posts</strong>
                </a>
              {{/if}}
            </div>
          </div>
          <div class="navbar-item">
            <div class="buttons">
              <!-- Only display the logout button if the user is logged in -->
              {{#if logged_in}}
                <a class="button is-dark" id="logout">
                  <strong>Log Out</strong>
                </a>
              {{else}}
                <a href="/login" class="button is-dark" id="login">
                  <strong>Log In</strong>
                </a>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </nav>
    {{{body}}}

    <footer class="footer hero is-small is-danger">
      <div class="content has-text-centered">
        <p>
          <strong>Luv2H8</strong>
          by
          <a target="_blank" href="https://github.com/SPloganathan">Sakthi
            Loganathan</a>,
          <a target="_blank" href="https://github.com/LenaChe2022">Elena
            Chernousova</a>,
          <a target="_blank" href="https://github.com/jenjen0219">Jennifer
            Gutierrez Manjares</a>,
          <a target="_blank" href="https://github.com/Mayakroe">Maya Roe</a>.
          <p>
            The source code is licensed
            <a
              target="_blank"
              href="http://opensource.org/licenses/mit-license.php"
            >MIT</a>.
          </p>
        </p>
      </div>
    </footer>
    
    <!-- Only include the logout script if the user is logged in -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <script src="/js/main.js"></script>
  </body>
</html>